-- Create loading screen GUI
local loadingScreenGui = Instance.new("ScreenGui")
loadingScreenGui.Name = "LoadingScreen"
loadingScreenGui.ResetOnSpawn = false -- Ensures the GUI persists across respawn
loadingScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Define function for creating gradient frames
local function createGradientFrame(parent, color1, color2)
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.BackgroundTransparency = 1
    
    local UIGradient = Instance.new("UIGradient")
    UIGradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, color1),
        ColorSequenceKeypoint.new(1, color2)
    })
    UIGradient.Rotation = 45
    UIGradient.Parent = frame
    
    frame.Parent = parent
    return frame
end

-- Create background
local background = createGradientFrame(loadingScreenGui, Color3.fromRGB(29, 29, 29), Color3.fromRGB(21, 21, 21))

-- Logo
local logo = Instance.new("ImageLabel")
logo.Size = UDim2.new(0, 250, 0, 250)
logo.Position = UDim2.new(0.5, -125, 0.3, -125)
logo.AnchorPoint = Vector2.new(0.5, 0.5)
logo.Image = "https://cdn.discordapp.com/icons/1075132840737505441/dd1af779afd4f1329dbd37aaacb4ce52.png?size=4096" -- Provided image URL
logo.BackgroundTransparency = 1
logo.Parent = background

-- Loading Text
local loadingText = Instance.new("TextLabel")
loadingText.Text = "LOADING"
loadingText.Size = UDim2.new(0, 250, 0, 50)
loadingText.Position = UDim2.new(0.5, -125, 0.6, -25)
loadingText.Font = Enum.Font.GothamSemibold
loadingText.TextSize = 36
loadingText.TextColor3 = Color3.fromRGB(255, 255, 255)
loadingText.BackgroundTransparency = 1
loadingText.Parent = background

-- Add loading animation
local loadingAnimation = Instance.new("ImageLabel")
loadingAnimation.Name = "LoadingAnimation"
loadingAnimation.Size = UDim2.new(0, 100, 0, 100)
loadingAnimation.Position = UDim2.new(0.5, -50, 0.7, -50)
loadingAnimation.AnchorPoint = Vector2.new(0.5, 0.5)
loadingAnimation.BackgroundTransparency = 1
loadingAnimation.Image = "rbxassetid://6555468699" -- Custom loading animation
loadingAnimation.Parent = background

-- Fade in animation
background.BackgroundTransparency = 1 -- Start fully transparent
background:TweenSizeAndPosition(
    UDim2.new(1, 0, 1, 0), -- End size
    UDim2.new(0, 0, 0, 0), -- End position
    Enum.EasingDirection.InOut,
    Enum.EasingStyle.Quad,
    1, -- Duration
    true
)

-- Simulate loading time
wait(10)

-- Fade out animation
background:TweenSizeAndPosition(
    UDim2.new(1, 0, 1, 0), -- Start size
    UDim2.new(0, 0, 1, 0), -- Start position (move it out of the screen)
    Enum.EasingDirection.InOut,
    Enum.EasingStyle.Quad,
    1, -- Duration
    true
)

-- Destroy the loading screen after the fade-out animation
wait(1) -- Wait for the fade-out animation to complete
loadingScreenGui:Destroy()
