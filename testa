-- Create loading screen GUI
local loadingScreenGui = Instance.new("ScreenGui")
loadingScreenGui.Name = "LoadingScreen"
loadingScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create background box
local background = Instance.new("Frame")
background.Size = UDim2.new(0.4, 0, 0.4, 0) -- Size of the box (40% of the screen width and height)
background.Position = UDim2.new(0.3, 0, 0.3, 0) -- Position the box at the center of the screen
background.BackgroundColor3 = Color3.fromRGB(29, 29, 29) -- Dark background color
background.BorderSizePixel = 0
background.Parent = loadingScreenGui

-- Logo
local logo = Instance.new("ImageLabel")
logo.Size = UDim2.new(0.6, 0, 0.6, 0) -- Size of the logo (60% of the box width and height)
logo.Position = UDim2.new(0.5, -75, 0.15, 0) -- Position the logo at the top center of the box
logo.AnchorPoint = Vector2.new(0.5, 0)
logo.Image = "https://cdn.discordapp.com/icons/1075132840737505441/dd1af779afd4f1329dbd37aaacb4ce52.png?size=4096" -- Provided image URL
logo.BackgroundTransparency = 1
logo.Parent = background

-- Loading Text
local loadingText = Instance.new("TextLabel")
loadingText.Text = "Loading..."
loadingText.Size = UDim2.new(1, 0, 0, 50) -- Height of the loading text
loadingText.Position = UDim2.new(0, 0, 0.8, 0) -- Position the loading text at the bottom center of the box
loadingText.Font = Enum.Font.SourceSansBold
loadingText.TextSize = 24
loadingText.TextColor3 = Color3.new(1, 1, 1)
loadingText.BackgroundTransparency = 1
loadingText.Parent = background

-- Fade in animation
background.BackgroundTransparency = 1 -- Start fully transparent
background:TweenSize(
    UDim2.new(0.4, 0, 0.4, 0), -- End size (40% of the screen width and height)
    Enum.EasingDirection.InOut,
    Enum.EasingStyle.Quad,
    1, -- Duration
    true
)

-- Simulate loading time
wait(10)

-- Fade out animation
background:TweenSize(
    UDim2.new(0.4, 0, 0.4, 0), -- Start size (40% of the screen width and height)
    Enum.EasingDirection.InOut,
    Enum.EasingStyle.Quad,
    1, -- Duration
    true
)

-- Destroy the loading screen after the fade-out animation
wait(1) -- Wait for the fade-out animation to complete
loadingScreenGui:Destroy()
